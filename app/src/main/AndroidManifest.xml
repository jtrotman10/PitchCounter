<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.westglenn.www.pitchcounter" >

    <uses-sdk android:minSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/baseball"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PitcherListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PitcherActivity"
            android:label="@string/title_activity_pitcher"
            android:parentActivityName=".PitcherListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.westglenn.www.pitchcounter.PitcherListActivity" />
        </activity>
        <activity
            android:name=".AddPitcherActivity"
            android:label="@string/title_activity_add_pitcher"
            android:parentActivityName=".PitcherListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.westglenn.www.pitchcounter.PitcherListActivity" />
        </activity>
        <activity
            android:name=".EditPitcherActivity"
            android:label="@string/title_activity_edit_pitcher"
            android:parentActivityName=".PitcherActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.westglenn.www.pitchcounter.EditPitcherActivity" />
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".PitcherListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.westglenn.www.pitchcounter.PitcherListActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".HelpActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.westglenn.www.pitchcounter.HelpActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".PitcherListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.westglenn.www.pitchcounter.PitcherListActivity" />
        </activity>
    </application>

</manifest>
