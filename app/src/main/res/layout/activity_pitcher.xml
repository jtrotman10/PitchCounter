<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.westglenn.www.pitchcounter.PitcherActivity"
    android:orientation="vertical">
    <TextView android:id="@+id/tvPitcherName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_element_height"
        android:textSize="50sp"
        android:text="Pitcher Name"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />
    <TextView android:id="@+id/tvPitchCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_element_height"
        android:textSize="40sp"
        android:text="Pitcher Count"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/tvPitcherName"
        />
    <TextView android:id="@+id/tvLastPitch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_element_height"
        android:textSize="40sp"
        android:text="Last Pitch"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/tvPitchCount"
        />

<Button android:id="@+id/buttonIncrement"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    android:layout_width="200dp"
    android:textSize="40sp"
    android:layout_below="@id/tvLastPitch"
    android:text="+"
    android:onClick="increment" />

<Button android:id="@+id/buttonDecrement"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvLastPitch"
    android:layout_toRightOf="@+id/buttonIncrement"
    android:textSize="40sp"
    android:text="-"
    android:onClick="decrement" />

</RelativeLayout>

